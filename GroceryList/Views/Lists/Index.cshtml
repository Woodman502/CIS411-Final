@model IEnumerable<GroceryList.Models.List>

@{
    ViewBag.Title = "Customer Lists";
}

<h2>Customer Grocery Lists</h2>

<p>
    @Html.ActionLink("Add Customer List", "Create", "Lists", htmlAttributes: new { @class = " button btn btn-lg btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ListDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CFirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ListDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CFirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ListId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ListId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ListId })
        </td>
    </tr>
}

</table>

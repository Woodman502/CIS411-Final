@model IEnumerable<GroceryList.Models.ListDetail>

@{
    ViewBag.Title = "Grocery List";
}

<h2>Grocery List</h2>

<p>
    @Html.ActionLink("Add Product to List", "Create", "ListDetails", htmlAttributes: new { @class = " button btn btn-lg btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.List.ListId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Store.StoreName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.List.ListId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Store.StoreName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ListDetailsId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ListDetailsId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ListDetailsId })
        </td>
    </tr>
}

</table>
